<h1>Listing exercises</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Similarity avarage</th>
    <th>User</th>
    <th>Course</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exercises.each do |exercise| %>
  <tr>
    <td><%= exercise.name %></td>
    <td><%= exercise.description %></td>
    <td><%= exercise.similarity_avarage %></td>
    <td><%= exercise.user.first_name + " " + exercise.user.last_name %></td>
    <td><%= exercise.course.name %></td>
    <td><%= link_to 'Show', course_exercise_path(@course, exercise) %></td>
    <td><%= link_to 'Edit', edit_course_exercise_path(@course, exercise) %></td>
    <td><%= link_to 'Destroy', course_exercise_path(@course, exercise), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to('New Exercise', new_course_exercise_path(@course), :method => :get) %>
