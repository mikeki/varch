<% @source_codes.each do |source_code| %>
  <tr>
	<!--checkbox--><td><input name="<%= source_code.student_id %>" type="checkbox" /></td>
    <td><%= source_code.student_id %></td>
    <td><%= source_code.exercise.name %></td>
